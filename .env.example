# ============================================================================
# LifeSignal - Crypto Inheritance Vault Environment Variables
# ============================================================================

# Application Environment
NODE_ENV=development
PORT=3000

# ============================================================================
# Blockchain Configuration (Sapphire Network)
# ============================================================================

# Sapphire Network Configuration
SAPPHIRE_RPC_URL=https://testnet.sapphire.oasis.dev
SAPPHIRE_CHAIN_ID=23295
SAPPHIRE_PRIVATE_KEY=your_private_key_here

# For test
DEPLOYED_USER_CONTRACT_ADDRESS=00000000000000000000000000000000000

# Contract Addresses (will be filled after deployment)
INHERITANCE_VAULT_CONTRACT_ADDRESS=

# ============================================================================
# Walrus Storage Configuration
# ============================================================================

# Walrus Storage API Configuration
WALRUS_API_URL=https://api.walrus.com
WALRUS_API_KEY=your_walrus_api_key_here
WALRUS_BUCKET_NAME=lifesignal-vault-storage

# ============================================================================
# Frontend Configuration
# ============================================================================

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SAPPHIRE_RPC_URL=https://testnet.sapphire.oasis.dev
NEXT_PUBLIC_SAPPHIRE_CHAIN_ID=23295
NEXT_PUBLIC_INHERITANCE_VAULT_CONTRACT_ADDRESS=

# Walrus SDK Configuration (Public)
NEXT_PUBLIC_WALRUS_API_URL=https://api.walrus.com

# ============================================================================
# Backend Configuration
# ============================================================================

# Express Server Configuration
BACKEND_PORT=5000
CORS_ORIGIN=http://localhost:3000

# Database Configuration (if needed for off-chain data)
DATABASE_URL=

# ============================================================================
# Security & Authentication
# ============================================================================

# JWT Configuration (if implementing authentication)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Encryption Configuration
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# ============================================================================
# External Services
# ============================================================================

# Email Service Configuration (for notifications)
EMAIL_SERVICE_API_KEY=
EMAIL_FROM_ADDRESS=noreply@lifesignal.com

# Push Notification Service (for ping reminders)
PUSH_NOTIFICATION_KEY=

# ============================================================================
# Development & Testing
# ============================================================================

# Testing Configuration
TEST_PRIVATE_KEY=your_test_private_key_here
TEST_RPC_URL=http://localhost:8545

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# WalletConnect Configuration
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here
